<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseLayoutMargins">
        <item name="android:background">?attr/uidContentPrimaryBackgroundColor</item>
    </style>

    <style name="BaseLayoutMargins.Dimens">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TestButtonTexts">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uidContentItemPrimaryNormalTextColor</item>
        <item name="android:textSize">@dimen/button_toggle_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ThemeSettingsHeader1Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ThemeSettingsHeader2Text">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="ThemeSettingsLabelText">
        <item name="android:textColor">?attr/uidContentItemPrimaryNormalTextColor</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="MyaAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">?attr/uidContentItemPrimaryNormalTextColor</item>
        <item name="android:windowTitleStyle">@style/UIDAlertDialogTitleTextStyle</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="reg_style_homescreen_title">
        <item name="android:textSize">@dimen/csw_dimen_20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>